+/*
+-- P()
+*/
+
+static PyObject *
+PyShmSemaphore_P(PyShmSemObj *self, PyObject *args)
+{
+    struct sembuf op[1];
+    int res;
+
+    op[0].sem_num = 0;
+    op[0].sem_op = -1;
+    op[0].sem_flg = self->opflag;
+
+    if (!PyArg_NoArgs(args))
+        return NULL;
+    refresh_semaphore_status(self);
+    res = semop(self->semid, op, (size_t)1);
+    if (res == -1)
+        return PyShm_Err();
+    Py_INCREF(Py_None);
+    return Py_None;
+}
